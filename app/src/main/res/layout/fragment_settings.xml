<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvAccentSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accent sound:"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvBeatSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beat sound:"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAccentSound"/>

    <ImageView
        android:id="@+id/ivAccentDec"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_minus_vector"
        android:padding="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/tvAccentSound"
        app:layout_constraintBottom_toBottomOf="@id/tvAccentSound"
        app:layout_constraintEnd_toStartOf="@id/tvAccentSoundValue"/>

    <TextView
        android:id="@+id/tvAccentSoundValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivAccentInc"/>

    <ImageView
        android:id="@+id/ivAccentInc"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="5dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_plus_vector"
        app:layout_constraintTop_toTopOf="@id/tvAccentSound"
        app:layout_constraintBottom_toBottomOf="@id/tvAccentSound"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvBeatSoundValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/tvBeatSound"
        app:layout_constraintStart_toEndOf="@id/tvBeatSound"/>
</android.support.constraint.ConstraintLayout>