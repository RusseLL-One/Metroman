<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-4449968809046813/5702536714"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

        <!--ads:adUnitId="ca-app-pub-4449968809046813/5702536714"-->
        <!--ads:adUnitId="ca-app-pub-3940256099942544/6300978111" testkey-->

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/clMainActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/bTempoTrain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttons"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/tempo_training"
                app:layout_constraintEnd_toStartOf="@id/bSettings"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/vLine"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttons"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/bTempoTrain"
                app:layout_constraintTop_toTopOf="parent" />

            <com.one.russell.metroman.views.BeatsContainerView
                android:id="@+id/llBeats"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vLine"
                app:layout_constraintTop_toBottomOf="@id/bSettings" />

            <TextView
                android:id="@+id/tvTrainingTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/pbTrainingTime"
                app:layout_constraintTop_toBottomOf="@id/llBeats"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/rotaryKnob" />

            <com.one.russell.metroman.views.CircularProgressBar
                android:id="@+id/pbTrainingTime"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toTopOf="@id/tvBpm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/rotaryKnob"
                app:layout_constraintTop_toBottomOf="@id/tvTrainingTitle"
                app:layout_constraintVertical_bias="1" />

            <com.one.russell.metroman.views.RotaryKnobView
                android:id="@+id/rotaryKnob"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/npBeatsPerBar"
                app:layout_constraintStart_toEndOf="@id/vLine"
                app:layout_constraintTop_toBottomOf="@id/llBeats"
                app:layout_constraintVertical_bias="1" />

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/toggle_play"
                app:layout_constraintBottom_toBottomOf="@id/rotaryKnob"
                app:layout_constraintEnd_toEndOf="@id/rotaryKnob"
                app:layout_constraintStart_toStartOf="@id/rotaryKnob"
                app:layout_constraintTop_toTopOf="@id/rotaryKnob" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap"
                app:layout_constraintBottom_toTopOf="@id/tapButton"
                app:layout_constraintEnd_toEndOf="@id/tapButton"
                app:layout_constraintStart_toStartOf="@id/tapButton" />

            <ImageView
                android:id="@+id/tapButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/tap_img"
                app:layout_constraintBottom_toBottomOf="@id/rotaryKnob"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/npValueOfBeat"
                app:layout_constraintStart_toStartOf="@id/npBeatsPerBar"
                app:layout_constraintTop_toBottomOf="@id/npBeatsPerBar" />

            <TextView
                android:id="@+id/tvBpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/bpm"
                android:lines="1"
                android:ems="3"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/etBpm"
                app:layout_constraintEnd_toEndOf="@id/rotaryKnob"
                app:layout_constraintStart_toStartOf="@id/rotaryKnob" />

            <EditText
                android:id="@+id/etBpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:lines="1"
                android:ems="3"
                android:textColor="@color/colorAccent"
                android:background="@android:color/transparent"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/rotaryKnob"
                app:layout_constraintEnd_toEndOf="@id/rotaryKnob"
                app:layout_constraintStart_toStartOf="@id/rotaryKnob"
                android:inputType="number" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/frame"
                app:layout_constraintBottom_toBottomOf="@id/npBeatsPerBar"
                app:layout_constraintEnd_toEndOf="@id/npValueOfBeat"
                app:layout_constraintStart_toStartOf="@id/npBeatsPerBar"
                app:layout_constraintTop_toTopOf="@id/npBeatsPerBar" />

            <!--NumberPicker
                android:id="@+id/npBeatsPerBar"
                android:layout_width="30dp"
                android:layout_height="120dp"
                android:descendantFocusability="blocksDescendants"
                android:theme="@style/DefaultNumberPickerTheme"
                app:layout_constraintEnd_toStartOf="@id/tvSeparator"
                app:layout_constraintTop_toTopOf="@+id/npValueOfBeat" /-->

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/npBeatsPerBar"
                android:layout_width="30dp"
                android:layout_height="120dp"
                app:layout_constraintEnd_toStartOf="@id/tvSeparator"
                app:layout_constraintTop_toTopOf="@+id/npValueOfBeat"
                app:np_dividerThickness="0dp"
                app:np_orientation="vertical"
                app:np_selectedTextColor="@color/colorText"
                app:np_selectedTextSize="18sp"
                app:np_textColor="@color/colorText"
                app:np_textSize="16sp"
                app:np_wrapSelectorWheel="false" />

            <TextView
                android:id="@+id/tvSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/npValueOfBeat"
                app:layout_constraintEnd_toStartOf="@+id/npValueOfBeat"
                app:layout_constraintTop_toTopOf="@+id/npValueOfBeat" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/npValueOfBeat"
                android:layout_width="30dp"
                android:layout_height="120dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@id/tapButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:np_dividerThickness="0dp"
                app:np_orientation="vertical"
                app:np_selectedTextColor="@color/colorText"
                app:np_selectedTextSize="18sp"
                app:np_textColor="@color/colorText"
                app:np_textSize="16sp"
                app:np_wrapSelectorWheel="false" />

            <com.one.russell.metroman.views.BeatLineView
                android:id="@+id/vLine"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameForFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>