<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/bSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="Settings"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/bTempoTrain"
            app:layout_constraintStart_toEndOf="@id/vLine"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bTempoTrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:layout_marginTop="8dp"
            android:text="Tempo training"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bSettings"
            app:layout_constraintTop_toTopOf="parent" />

        <com.one.russell.metronomekotlin.RotaryKnob
            android:id="@+id/rotaryKnob"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            android:text="Play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="TAP"
            app:layout_constraintEnd_toEndOf="@id/tapButton"
            app:layout_constraintStart_toStartOf="@id/tapButton"
            app:layout_constraintBottom_toTopOf="@id/tapButton"/>

        <ImageView
            android:id="@+id/tapButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_tap"
            android:text="Tap"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@id/rotaryKnob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rotaryKnob"/>

        <TextView
            android:id="@+id/bpmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BPM"
            android:textColor="@color/colorText"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/rotaryKnob"
            app:layout_constraintEnd_toEndOf="@id/rotaryKnob"
            app:layout_constraintStart_toStartOf="@id/rotaryKnob" />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/buttons"
            app:layout_constraintBottom_toBottomOf="@id/npBeatsPerBar"
            app:layout_constraintEnd_toEndOf="@id/npValueOfBeat"
            app:layout_constraintStart_toStartOf="@id/npBeatsPerBar"
            app:layout_constraintTop_toTopOf="@id/npBeatsPerBar" />

        <NumberPicker
            android:id="@+id/npBeatsPerBar"
            android:layout_width="30dp"
            android:layout_height="120dp"
            android:descendantFocusability="blocksDescendants"
            android:theme="@style/DefaultNumberPickerTheme"
            app:layout_constraintEnd_toStartOf="@id/tvSeparator"
            app:layout_constraintTop_toTopOf="@id/rotaryKnob"/>

        <TextView
            android:id="@+id/tvSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/colorText"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/npBeatsPerBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rotaryKnob"
            app:layout_constraintTop_toTopOf="@+id/npBeatsPerBar" />

        <NumberPicker
            android:id="@+id/npValueOfBeat"
            android:layout_width="30dp"
            android:layout_height="120dp"
            android:descendantFocusability="blocksDescendants"
            android:theme="@style/DefaultNumberPickerTheme"
            app:layout_constraintStart_toEndOf="@id/tvSeparator"
            app:layout_constraintTop_toTopOf="@id/rotaryKnob"/>


        <FrameLayout
            android:id="@+id/vLine"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/visual_beat_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/vBall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:background="@drawable/visual_beat_ball" />

        </FrameLayout>


    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameForFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>